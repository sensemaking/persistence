    <RootNamespace>Fdb.Rx.Domain.Bdd</RootNamespace>
    <AssemblyName>Fdb.Rx.Domain.Bdd</AssemblyName>
    <Version>1.0.0</Version>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <PackageId>Fdb.Rx.Dommain.Bdd</PackageId>
    <Authors>First Databank</Authors>
    <Description>Deployment package for Bdd domain testing framework</Description>
    <Copyright>Copyright Â© 2025</Copyright>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
